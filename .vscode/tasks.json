{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run Local",
      "type": "shell",
      "command": "yarn dev",
      "group": "build",
      "icon": {
        "id": "run",
        "color": "terminal.ansiGreen"
      },
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "problemMatcher": []
    },
    {
      "label": "tsc: watch",
      "type": "typescript",
      "tsconfig": "app/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "isDefault": true,
        "kind": "build"
      }
    },
    {
      "label": "test: watch",
      "type": "shell",
      "command": "yarn test --color=false --reporters=\"${workspaceFolder}/.vscode/code-reporter.js\"",
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "javascript",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^-- failed;([^;]+);([^;]+);(.+)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^-- RUN START",
          "endsPattern": "^-- RUN COMPLETE"
        }
      }
    }
  ]
}
