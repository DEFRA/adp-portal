{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "args": ["package", "start"],
      "cwd": "${workspaceFolder}/app/packages/backend",
      "program": "node_modules/.bin/backstage-cli",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "openOnSessionStart",
      "killBehavior": "polite",
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "application",
        "order": 1
      }
    },
    {
      "name": "App",
      "type": "node",
      "request": "launch",
      "args": ["package", "start"],
      "cwd": "${workspaceFolder}/app/packages/app",
      "program": "node_modules/.bin/backstage-cli",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "openOnSessionStart",
      "killBehavior": "polite",
      "outputCapture": "std",
      "presentation": {
        "hidden": false,
        "group": "application",
        "order": 1
      }
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "name": "Jest",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "--runInBand",
        "--watchAll=false",
        "--testTimeout=999999999"
      ],
      "console": "integratedTerminal",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    },
    {
      "type": "node",
      "name": "Jest: current file",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "${file}",
        "--runInBand",
        "--watchAll=false",
        "--testTimeout=99999999"
      ],
      "program": "node_modules/.bin/backstage-cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/app",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "App + Backend",
      "configurations": ["App", "Backend"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "application",
        "order": 0
      }
    }
  ]
}
