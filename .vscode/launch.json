{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Backend",
      "type": "node",
      "request": "launch",
      "args": ["package", "start"],
      "cwd": "${workspaceFolder}/app/packages/backend",
      "program": "node_modules/.bin/backstage-cli",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "name": "Debug Jest tests",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "--runInBand",
        "--watchAll=false",
        "--testTimeout=999999999"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app"
    },
    {
      "type": "node",
      "name": "Debug current jest file",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "${file}",
        "--runInBand",
        "--watchAll=false",
        "--testTimeout=99999999"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app"
    },
    {
      "type": "node",
      "name": "Debug Jest tests-adp",
      "request": "launch",
      "args": ["repo", "test", "--runInBand", "--watchAll=false"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app/plugins/adp"
    },
    {
      "type": "node",
      "name": "Debug Jest tests-adp-backend",
      "request": "launch",
      "args": ["repo", "test", "--runInBand", "--watchAll=false", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app/plugins/adp-backend"
    }
  ]
}
