{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "name": "Debug Jest tests",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "--runInBand",
        "--watchAll=false",
        "--coverage=true",
        // "--testPathPattern=${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app"
    },
    {
      "type": "node",
      "name": "Debug Jest tests-adp",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "--runInBand",
        "--watchAll=false",
        "--coverage=true",
        // "--testPathPattern=${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app/plugins/adp"
    },
    {
      "type": "node",
      "name": "Debug Jest tests-adp-backend",
      "request": "launch",
      "args": [
        "repo",
        "test",
        "--runInBand",
        "--watchAll=false",
        "--coverage=true",
        // "--testPathPattern=${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "node_modules/.bin/backstage-cli",
      "cwd": "${workspaceFolder}/app/plugins/adp-backend"
    }
  ]
}