{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "Debug Jest tests",
        "request": "launch",
        "args": [
          "repo",
          "test",
          "--runInBand",
          "--watchAll=false"
        ],
        "console": "integratedTerminal",
